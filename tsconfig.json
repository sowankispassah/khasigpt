{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "strictNullChecks": true
  },
  "include": [
    "**/*.cjs",
    "**/*.cts",
    "**/*.mjs",
    "**/*.mts",
    "**/*.ts",
    "**/*.tsx",
    ".next-tmp/types/**/*.ts",
    ".next/types/**/*.ts",
    "/tmp/ai-next/types/**/*.ts",
    "next-env.d.ts",
    "next.config.js",
    "next.config.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    ".next-build-clean",
    ".next-tmp",
    "build_output",
    "dist-next"
  ]
}
